<UserControl x:Class="StudentDBProject.WindowsScreens.StudentEntryScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentDBProject.WindowsScreens"
             mc:Ignorable="d" 
             d:DesignHeight="500"  d:DesignWidth="795"  Foreground="#FF125EAA">
    <StackPanel>
        <Label Padding="0,5,5,5" Content="Student Information Fields" FontSize="25" Foreground="#FF125EAA" Margin="10"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="10">
                <StackPanel Margin="0,5,0,0">
                    <TextBlock Text="Student ID" Margin="0,0,0,2"/>
                    <TextBox x:Name="txtId" Height="30" Width="170"  HorizontalAlignment="Left" Padding="5" IsTabStop="False"/>
                </StackPanel>
                <StackPanel Margin="0,5,0,0">
                    <TextBlock Text="Name" Margin="0,0,0,2"/>
                    <TextBox x:Name="txtSname" Height="30" Width="230" HorizontalAlignment="Left" Padding="5"/>
                </StackPanel>
                <StackPanel Margin="0,5,0,0">
                    <TextBlock Text="Father's Name" Margin="0,0,0,2"/>
                    <TextBox x:Name="txtFName" Height="30" Width="230" HorizontalAlignment="Left" Padding="5"/>
                </StackPanel>
                <StackPanel Margin="0,5,0,0">
                    <TextBlock Text="Address" Margin="0,0,0,2"/>
                    <TextBox x:Name="txtAdd" Height="80" Width="230" HorizontalAlignment="Left" Padding="5"/>
                </StackPanel>
                <StackPanel Margin="0,5,0,0">
                    <TextBlock Text="Contact" Margin="0,0,0,2"/>
                    <TextBox x:Name="txtCon" Height="30" Width="170" HorizontalAlignment="Left" Padding="5" MaxLength="10"/>
                </StackPanel>
                <StackPanel Margin="0,5,0,0">
                    <TextBlock Text="VotedID Number" Margin="0,0,0,2"/>
                    <TextBox x:Name="txtVoter" Height="30" Width="170" HorizontalAlignment="Left" Padding="5"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="10">
                <StackPanel Margin="0,5,0,0">
                    <TextBlock Text="Class" Margin="0,0,0,2"/>
                    <TextBox x:Name="txtClass" Height="30" Width="200" HorizontalAlignment="Left" Padding="5"/>
                </StackPanel>
                <StackPanel Margin="0,5,0,0">
                    <TextBlock Text="Roll Number" Margin="0,0,0,2"/>
                    <TextBox x:Name="txtRoll" Height="30" Width="200" HorizontalAlignment="Left" Padding="5"/>
                </StackPanel>
                <StackPanel Margin="0,5,0,0">
                    <TextBlock Text="Section" Margin="0,0,0,2"/>
                    <TextBox x:Name="txtSec" Height="30" Width="200" HorizontalAlignment="Left" Padding="5"/>
                </StackPanel>
                <StackPanel Margin="0,5,0,0">
                    <TextBlock Text="Library Card Number" Margin="0,0,0,2"/>
                    <TextBox x:Name="txtLB" Height="30" Width="200" HorizontalAlignment="Left" Padding="5"/>
                </StackPanel>
                <StackPanel Margin="0,5,0,0">
                    <TextBlock Text="Bus ID" Margin="0,0,0,2"/>
                    <TextBox x:Name="txtBus" Height="30" Width="200" HorizontalAlignment="Left" Padding="5"/>
                </StackPanel>
                <StackPanel Margin="0,5,0,0">
                    <TextBlock Text="Status" Margin="0,0,0,2"/>
                    <TextBlock x:Name="lblStatus" Width="210" Height="30" Text="Waiting..." FontSize="15" HorizontalAlignment="Left"/>
                </StackPanel>
                <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                    <Button x:Name="btnTra"  Margin="0,0,10,0"  HorizontalAlignment="Left" Width="90" Height="30" Content="Transact" BorderBrush="{x:Null}" Background="#FF125EAA" Foreground="White" Click="btnTra_Click" />
                    <Button x:Name="btnUpdate"  HorizontalAlignment="Left" Width="100" Height="30" Content="Upate With" BorderBrush="{x:Null}" Background="#FF125EAA" Foreground="White" Click="btnUpdate_Click" />
                </StackPanel>
                <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                    <Button x:Name="btnNewForm"  HorizontalAlignment="Left" Width="90" Height="30" Content="Clean Fields" BorderBrush="{x:Null}" Background="#FF125EAA" Foreground="White" Click="btnNewForm_Click" />
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="2" Name="ErrorPanel" Margin="0,0,0,0">
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
