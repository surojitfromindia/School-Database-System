<UserControl x:Class="StudentDBProject.WindowsScreens.BookRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentDBProject.WindowsScreens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Padding="5" Name="txtBookName" TextWrapping="Wrap"  Foreground="White" Text="Don Quixote"/>
        <TextBlock Grid.Column="1" Padding="5" Name="txtISDate" TextWrapping="NoWrap"  Foreground="White" Text="12/12/2019"/>
        <TextBlock Grid.Column="2" Padding="5" Name="txtRetDate" TextWrapping="NoWrap"  Foreground="White" Text="19/12/2019"/>
        <TextBlock Grid.Column="3" Padding="5" Name="txtFine" TextWrapping="NoWrap"  Foreground="White" Text="Rs. 10"/>
        <TextBlock Grid.Column="4" Padding="5" Name="txtRep" TextWrapping="NoWrap"  Foreground="White" Text="Retured"/>

    </Grid>
</UserControl>
