<UserControl x:Class="StudentDBProject.WindowsScreens.MiniControls.SearchStudentMiniControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentDBProject.WindowsScreens.MiniControls"
             mc:Ignorable="d" 
             d:DesignHeight="67.5" d:DesignWidth="800">

    <StackPanel>
        <TextBlock Text="Enter Student Info, separate multiple data by ';' "/>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <TextBox x:Name="txtIDNumber" Margin="0,0,10,0" Height="30" Width="200"  HorizontalAlignment="Left" Padding="5"/>
            <Button x:Name="btnSearch" Margin="0,0,10,0" HorizontalAlignment="Left" Width="50" Height="30" Content="_search" BorderBrush="{x:Null}"
                    Foreground="White" Click="BtnSearch_Click"/>
        </StackPanel>
    </StackPanel>
</UserControl>
