            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <TextBlock Grid.Row="0" Name="txtRoll" Text="1" FontSize="11"/>
                <TextBlock Margin="10,0,0,0" Grid.Row="0" Name="txtSec" Text="C" FontSize="11"/>
                <TextBlock Margin="10,0,0,0" Grid.Row="0" Name="txtClass" Text="P052019" FontSize="11"/>
                <TextBlock Margin="10,0,0,0" Name="txtCon" Text="987268525452" FontSize="11" />
            </StackPanel>

        </Grid>
    </StackPanel>
</UserControl>
